{
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "commonjs",
    "newLine": "LF",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowUnreachableCode": false,
    "pretty": true,
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "lib": ["esnext"]
  },
  "include": ["src/**/*"]
}
